<mvc:View controllerName="project4.controller.CompanyCodeList"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:t="sap.ui.table"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core" 
  xmlns:form="sap.ui.layout.form"
  xmlns:layout="sap.ui.layout"
  height="100%">

    <f:DynamicPage id="CompanyCodeListPage">
     <f:title>
        <f:DynamicPageTitle>
            <f:heading>
                <HBox>
                    <Button type="Back" press=".toBack"/>
                    <Title text="회사코드 조회"/>
                </HBox>
            </f:heading>
        </f:DynamicPageTitle>
     </f:title>
    <f:header>
        <f:DynamicPageHeader pinnable="true">
            <form:SimpleForm layout="ResponsiveGridLayout">
                <form:content class="sapUiLargeMarginBeginEnd">
                    <VBox>
                        <Label text="회사코드 : "/>
                        <MultiInput id="CompanyCode" valueHelpRequest=".onValueHelpCoCdList" showValueHelp="true"/>
                        <layoutData>
                            <layout:GridData span="XL2 L2 M6 S12"/>
                        </layoutData>
                    </VBox>
                    <VBox>
                        <Label text="회사명 : "/>
                        <Input id="CompanyCodeName"/>
                        <layoutData>
                            <layout:GridData span="XL2 L2 M6 S12"/>
                        </layoutData>
                    </VBox>
                    <VBox>
                        <Label text="국가/지역 : "/>
                        <MultiInput id="CompanyCountry" valueHelpRequest=".onValueHelpCountryList" showValueHelp="true"/>
                        <layoutData>
                            <layout:GridData span="XL2 L2 M6 S12"/>
                        </layoutData>
                    </VBox>
                    <VBox>
                        <Label text="회사 통화 : "/>
                        <Input id="CompanyCurrency"/>
                        <layoutData>
                            <layout:GridData span="XL2 L2 M6 S12"/>
                        </layoutData>
                    </VBox>
                    <VBox>
                        <Label text="계정과목표 : "/>
                        <MultiInput id="CompanyCoa" valueHelpRequest=".onValueHelpCoA" showValueHelp="true"/>
                        <layoutData>
                            <layout:GridData span="XL2 L2 M6 S12"/>
                        </layoutData>
                    </VBox>
                    <HBox justifyContent="End" class="sapUiSmallMarginTop">
                        <Button text="검색" type="Emphasized" press=".onSearch"/>
                        <Button text="초기화" type="Transparent" press=".onReset" class="sapUiSmallMarginBegin"/>
                        <layoutData>
                            <layout:GridData span="XL12 L12 M12 S12"/>
                        </layoutData>
                    </HBox>
                </form:content>
            </form:SimpleForm>
        </f:DynamicPageHeader>
        </f:header>
        <f:content class="sapUiSmallMargin">
        <t:Table id="CompanyCodeListTable" rows="{CompanyCodeListModel>/}" rowActionCount="1" visibleRowCount="20">
            <t:rowActionTemplate>
                <t:RowAction>
                    <t:items>
                    <t:RowActionItem type="Navigation" press=".toCompanyCodeDetail"></t:RowActionItem>
                    </t:items>
                </t:RowAction>
            </t:rowActionTemplate>

            <t:extension>
                <OverflowToolbar>
                    <Text id="totalNumber" class="sapUiTinyMarginBottom"/>
                    <ToolbarSpacer/>
                        <Button type="Transparent" text="생성" press=".toCreateCoCd"/>
                        <Button icon="sap-icon://excel-attachment" tooltip="Excel Download" press=".onDataExport"/>
                </OverflowToolbar>
            </t:extension>
            
            <t:columns>
                <t:Column hAlign="Center">
                    <Label text="회사코드"/>
                    <t:template>
                        <Text text="{CompanyCodeListModel>com_code}"/>
                    </t:template>
                </t:Column>
                <t:Column hAlign="Center">
                    <Label text="회사명"/>
                    <t:template>
                        <Text text="{CompanyCodeListModel>com_code_name}"/>
                    </t:template>
                </t:Column>
                <t:Column hAlign="Center">
                    <Label text="국가/지역"/>
                    <t:template>
                        <Text text="{CompanyCodeListModel>com_country}"/>
                    </t:template>
                </t:Column> 
                <t:Column hAlign="Center">
                    <Label text="회사 통화"/>
                    <t:template>
                        <Text text="{CompanyCodeListModel>com_currency}"/>
                    </t:template>
                </t:Column> 
                <t:Column hAlign="Center">
                    <Label text="계정과목표"/>
                    <t:template>
                        <Text text="{CompanyCodeListModel>com_coa}"/>
                    </t:template>
                </t:Column> 
            </t:columns>
        </t:Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>