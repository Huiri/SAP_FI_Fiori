<mvc:View controllerName="project4.controller.CreateCoCd" xmlns="sap.m" xmlns:f="sap.f" xmlns:t="sap.ui.table" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns:layout="sap.ui.layout" height="100%">
    <f:DynamicPage id="page" headerExpanded="false" showFooter="true" toggleHeaderOnTitleClick="true">
        <f:title>
            <f:DynamicPageTitle id="_IDGenDynamicPageTitle1">
                <f:heading>
                    <HBox id="_IDGenHBox1">
                        <Title id="_IDGenTitle1" text="회사 코드 생성" class="sapUiMediumMarginBegin sapUiMediumMarginTopBottom" />
                    </HBox>
                </f:heading>
                <!-- 헤더를 접었을 때 어떤 모양이 나올지를 정하는 부분이 snappedContent -->
                <f:snappedContent>
                    <form:SimpleForm id="_IDGenSimpleForm1" layout="ResponsiveGridLayout">
                        <form:content>
                            <VBox id="_IDGenVBox1" class="sapUiMediumMarginBottom">
                                <Label id="_IDGenLabel1" text="일반 데이터 " design="Bold" class="sapUiMediumMarginBottom" />

                                <Label id="_IDGenLabel2" text="회사 코드 : " class="sapUiTinyMarginBottom" required="true" />
                                <Input id="CoCdCod" class="sapUiSmallMarginBottom" />

                                <Label id="_IDGenLabel3" text="회사명 : " class="sapUiTinyMarginBottom" required="true" />
                                <Input id="CoCdName" class="sapUiSmallMarginBottom" />

                                <Label id="_IDGenLabel4" text="관리회계 영역 : " class="sapUiTinyMarginBottom" required="true" />
                                <Input id="CoCdCoArea" class="sapUiSmallMarginBottom" valueHelpRequest="" showValueHelp="true" />

                                <Label id="_IDGenLabel5" text="통화 단위 : " class="sapUiTinyMarginBottom" required="true" />
                                <Select width="100rem" id="CoCdCurrency" class="sapUiSmallMarginBottom">
                                    <core:Item id="_IDGenItem2" key="" text="선택" />
                                    <core:Item id="_IDGenItem3" key="KRW" text="KRW" />
                                    <core:Item id="_IDGenItem4" key="USD" text="USD" />
                                </Select>
                                <Label id="_IDGenLabel6" text="회사 언어 : " class="sapUiTinyMarginBottom" required="true" />
                                <Select width="100rem" id="CoCdLanguage" class="sapUiSmallMarginBottom">
                                    <core:Item id="_IDGenItem5" key="" text="선택" />
                                    <core:Item id="_IDGenItem6" key="KR" text="한국어" />
                                    <core:Item id="_IDGenItem7" key="EN" text="영어" />
                                </Select>

                                <layoutData>
                                    <layout:GridData id="_IDGenGridData1" span="XL3 L2 M3 S12" />
                                </layoutData>
                            </VBox>
                            <VBox id="_IDGenVBox2" class="sapUiMediumMarginBottom">
                                <layoutData>
                                    <layout:GridData id="_IDGenGridData2" span="XL1 L1 M1 S12" />
                                </layoutData>
                            </VBox>

                            <VBox id="_IDGenVBox3">
                                <Label id="_IDGenLabel7" text="표준 주소 " design="Bold" class="sapUiMediumMarginBottom" />

                                <Label id="_IDGenLabel8" text="도로주소 : " class="sapUiTinyMarginBottom" />
                                <Input id="CoCdAddress" class="sapUiSmallMarginBottom" />

                                <Label id="_IDGenLabel10" text="도시 : " class="sapUiTinyMarginBottom" />
                                <Input id="CoCdCity" class="sapUiSmallMarginBottom" />

                               
                                <Label id="_IDGenLabel12" text="국가/지역 : " class="sapUiTinyMarginBottom" required="true" />
                                <Input id="CoCdCountry" class="sapUiLargeMarginBottom" valueHelpRequest="" showValueHelp="true" />

                                <layoutData>
                                    <layout:GridData id="_IDGenGridData3" span="XL3 L2 M3 S12" />
                                </layoutData>
                            </VBox>

                            <VBox id="_IDGenVBox4" class="sapUiMediumMarginBottom">
                                <layoutData>
                                    <layout:GridData id="_IDGenGridData4" span="XL1 L1 M1 S12" />
                                </layoutData>
                            </VBox>

                            <VBox id="_IDGenVBox5">
                                <Label id="_IDGenLabel13" text="회계 데이터" design="Bold" class="sapUiMediumMarginBottom" />
                                                                    
                                <Label id="_IDGenLabel14" text="회계연도 : " class="sapUiTinyMarginBottom" required="true" />
                                <Input id="CoCdFiscalYear" class="sapUiSmallMarginBottom" />

                                <Label id="_IDGenLabel15" text="회사 계정 과목표 : " class="sapUiTinyMarginBottom" required="true" />
                                <Input id="CoCdCoa" class="sapUiSmallMarginBottom" valueHelpRequest="" showValueHelp="true"/>


                                <Label id="_IDGenLabel16" text="부가세 과세 여부 : " class="sapUiTinyMarginBottom" />
                                <Select width="100rem" id="CoCdVat" class="sapUiSmallMarginBottom">
                                    <core:Item id="_IDGenItem1" key="" text="선택" />
                                    <core:Item id="_IDGenItem8" key="KR" text="과세" />
                                    <core:Item id="_IDGenItem9" key="EN" text="면세" />
                                </Select>
                                <layoutData>
                                    <layout:GridData id="_IDGenGridData5" span="XL3 L2 M3 S12" />
                                </layoutData>
                            </VBox>
                            
                        </form:content>
                    </form:SimpleForm>
                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>
        <f:footer>
            <OverflowToolbar id="_IDGenOverflowToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button id="_IDGenButton1" type="Emphasized" text="생성" press="onCreate" />
                <Button id="_IDGenButton2" type="Default" text="취소" press=".onCancel" />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
