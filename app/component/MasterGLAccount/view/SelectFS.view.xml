<mvc:View controllerName="project2.controller.SelectFS"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:t="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core" 
    
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    height="100%">
    <f:DynamicPage id="page" headerExpanded="false" showFooter="true" toggleHeaderOnTitleClick="true">
        <f:title>
            <f:DynamicPageTitle >
                <f:heading >
                    <HBox>
                        <Title text="재무제표 조회 조건" class="sapUiMediumMarginBegin sapUiMediumMarginTopBottom"/>
                    </HBox>
                </f:heading>
                <!-- 헤더를 접었을 때 어떤 모양이 나올지를 정하는 부분이 snappedContent -->
                <f:snappedContent>
                    <form:SimpleForm layout="ResponsiveGridLayout">
                        <form:content>
                            <VBox class="sapUiMediumMarginBottom">
                                <Label text="회사코드 " class="sapUiTinyMarginBottom" design="Bold"/>
                                <Text class="sapUiSmallMarginBottom" text="개" />

                                <Label text="회계연도 " class="sapUiTinyMarginBottom" />
                                <Input id= "fsDate" class="sapUiSmallMarginBottom" />

                                <Label text="재무제표 종류 " class="sapUiTinyMarginBottom"/>
                                <Select width="100rem" id="fsKinds" class="sapUiSmallMarginBottom">
                                    <core:Item key="" text="선택" />
                                    <core:Item key="" text="1" />
                                    <core:Item key="" text="2" />
                                </Select>

                                <Label text="재무제표 버전 " class="sapUiTinyMarginBottom"/>
                                <Select width="100rem" id="fsVersion" class="sapUiSmallMarginBottom">
                                    <core:Item key="" text="선택" />
                                    <core:Item key="" text="1" />
                                    <core:Item key="" text="2" />
                                </Select>

                                <layoutData>
                                    <layout:GridData span="XL3 L2 M3 S12"/>
                                </layoutData>
                            </VBox>
                            <VBox class="sapUiMediumMarginBottom">
                                <layoutData>
                                    <layout:GridData span="XL1 L1 M3 S12"/>
                                </layoutData>
                            </VBox>                            
                            <VBox class="sapUiMediumMarginBottom">
 
                                <layoutData>
                                    <layout:GridData span="XL4 L1 M3 S12"/>
                                </layoutData>
                            </VBox> 
                                                       
                        </form:content>
                    </form:SimpleForm>
                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button type="Emphasized" text="조회" press="" ariaHasPopup="Dialog"/>
                <Button type="Default" text="취소" press="."/>
            </OverflowToolbar>
        </f:footer>

    </f:DynamicPage>
    
</mvc:View>

